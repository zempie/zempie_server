{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "pretty": true,
    "outDir": "dist",
    "baseUrl": "."
    //    "paths": {
    //      "@/*": [
    //        "src/*"
    //      ]
    //    }
  },
  "include": [
    "src/**/*",
    "src/swagger/*.json",
    "config/**/*.json",
    "public/**/*",
    "package.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
